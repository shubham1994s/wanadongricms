<body>
    <input type="hidden" value="@ViewBag.AppId" id="appid" />

    <div class="content-inner">
        <br />

        <div class="container">
            <div class="row">
                <span class="backk" style="margin-left: 15px;">

                    <a href="@Url.Action("Index", "HouseScanify")" id="btnBack" class="btn btn-sm btn-success filter-button-style"><span class="glyphicon glyphicon-circle-arrow-left"></span>  Back</a>
