<style>

    /* The container */
    .container_radio {
        display: inline;
        margin-left: 8px;
        border-radius: 2px;
        position: relative;
        padding-left: 28px;
        margin-bottom: 12px;
        cursor: pointer;
        font-size: 12px;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
        vertical-align: top
    }

        /* Hide the browser's default radio button */
        .container_radio input {
            position: absolute;
            opacity: 0;
            cursor: pointer;
        }

    /* Create a custom radio button */
    .checkmark {
        position: absolute;
        top: 2px;
        left: 4px;
        height: 25px;
        width: 25px;
        background-color: #ccc;
        border-radius: 50%;
    }

    .checkmark1 {
        position: absolute;
        border-radius: 50%;
        top: 2px;
        left: 4px;
        width: 18px;
        height: 18px;
        -ms-transform: rotate(45deg); /* IE 9 */
        -webkit-transform: rotate(45deg); /* Chrome, Safari, Opera */
        transform: rotate(45deg);
    }

    .checkmark_stem {
        position: absolute;
        width: 3px;
        height: 10px;
        background-color: #EEF5F9;
        left: 8px;
        top: 1px;
    }

    .checkmark_kick {
        position: absolute;
        width: 7px;
        height: 3px;
        background-color: #EEF5F9;
        left: 4px;
        top: 9px;
    }

    /* On mouse-over, add a grey background color */
    .container_radio:hover input ~ .checkmark {
        background-color: #ccc;
    }

    /* When the radio button is checked, add a blue background */
    .container_radio:nth-child(1) input ~ .checkmark1 {
        border: 2px solid #999;
    }

    .container_radio:nth-child(2) input ~ .checkmark1 {
        border: 2px solid #6fa570;
    }

    .container_radio:nth-child(3) input ~ .checkmark1 {
        border: 2px solid #d1655e;
    }

    .container_radio:nth-child(4) input ~ .checkmark1 {
        border: 2px solid #e89f5f;
    }

    .container_radio:nth-child(5) input ~ .checkmark1 {
        border: 2px solid #0086c3;
    }

    .container_radio:nth-child(1) input:checked ~ .checkmark1 {
        background-color: #999;
    }

    .container_radio:nth-child(2) input:checked ~ .checkmark1 {
        background-color: #6fa570;
    }

    .container_radio:nth-child(3) input:checked ~ .checkmark1 {
        background-color: #d1655e;
    }

    .container_radio:nth-child(4) input:checked ~ .checkmark1 {
        background-color: #e89f5f;
    }

    .container_radio:nth-child(5) input:checked ~ .checkmark1 {
        background-color: #0086c3;
    }
    /* Create the indicator (the dot/circle - hidden when not checked) */
    .checkmark:after {
        content: "";
        position: absolute;
        display: none;
    }

    /* Show the indicator (dot/circle) when checked */
    .container_radio input:checked ~ .checkmark:after {
        display: block;
    }

    /* Style the indicator (dot/circle) */
    .container_radio .checkmark:after {
        top: 7px;
        left: 7px;
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: white;
    }

    .checkcolor {
        background-color: #fff !important;
    }
</style>

